<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Automation Test Suite"
       parallel="tests"
       thread-count="4"
       verbose="1">

    <test name="UI Tests">
        <parameter name="cucumber.filter.tags" value="@UI"/>
        <classes>
            <class name="runner.FinalTestRunner"/>
        </classes>
    </test>

    <test name="API Tests">
        <parameter name="cucumber.filter.tags" value="@api"/>
        <classes>
            <class name="runner.FinalTestRunner"/>
        </classes>
    </test>

    <test name="Integration Tests">
        <parameter name="cucumber.filter.tags" value="@integration"/>
        <classes>
            <class name="runner.FinalTestRunner"/>
        </classes>
    </test>

    <test name="E2E Tests">
        <parameter name="cucumber.filter.tags" value="@e2e"/>
        <classes>
            <class name="runner.FinalTestRunner"/>
        </classes>
    </test>

</suite>
